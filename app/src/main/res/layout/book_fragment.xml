<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_25sdp"
    android:layout_marginBottom="@dimen/_65sdp"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/ubuntu_bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/dark_edittext_border"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Date"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_marginTop="@dimen/_15sdp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/dark_edittext_border"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableEnd="@drawable/date_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:textSize="@dimen/_12ssp"
            android:hint="DD/MM/YYYY" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Time"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="3">

            <EditText
                android:layout_weight="1.4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/dark_edittext_border"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableEnd="@drawable/clock_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:textSize="@dimen/_12ssp"
                android:hint="00:00 am"
                android:fontFamily="@font/ubuntu_light"
                />

            <TextView
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/To"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/ubuntu_bold"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_10sdp"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1.4"
                android:background="@drawable/dark_edittext_border"
                android:drawableEnd="@drawable/clock_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/ubuntu_light"
                android:hint="00:00 am"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Address"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_marginTop="@dimen/_15sdp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/dark_edittext_border"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:textSize="@dimen/_12ssp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_marginTop="@dimen/_15sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/dark_edittext_border"
            android:drawablePadding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="Upload photo to help the service provider quote your job. (optional)"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/ubuntu_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_64sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/colored_placeholder_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="64dp"
                    android:background="@drawable/circler_border"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/camera_icon"
                    app:layout_constraintStart_toStartOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            
            
            <LinearLayout
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_64sdp"
                android:background="@drawable/colored_square_border"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add2"/>


            </LinearLayout>
            
            

        </LinearLayout>


        <Button
            android:id="@+id/sendRequestBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/black_rounded_btn"
            android:fontFamily="@font/ubuntu_bold"
            android:gravity="center"
            android:text="@string/SendRequest"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14ssp" />



    </LinearLayout>
</androidx.core.widget.NestedScrollView>